{
  "name": "kakbet-widget-proxy",
  "version": "1.0.0",
  "description": "Standalone widget proxy service for multiple providers",
  "main": "src/server.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "echo 'No build step required'",
    "test": "jest",
    "docker:build": "docker build -t kakbet-widget-proxy .",
    "docker:build-multi": "docker buildx build --platform linux/amd64,linux/arm64 -t kakbet-widget-proxy .",
    "docker:build-amd64": "docker buildx build --platform linux/amd64 -t kakbet-widget-proxy .",
    "docker:run": "docker run -p 8001:8001 kakbet-widget-proxy"
  },
  "keywords": [
    "widget",
    "proxy",
    "sportradar",
    "betting",
    "sportsbook"
  ],
  "author": "KakBet",
  "license": "MIT",
  "dependencies": {
    "express": "4.18.2",
    "cors": "2.8.5",
    "helmet": "7.1.0",
    "compression": "1.7.4",
    "morgan": "1.10.0",
    "node-cache": "5.1.2",
    "axios": "1.6.2",
    "js-yaml": "4.1.0",
    "dotenv": "16.3.1"
  },
  "devDependencies": {
    "nodemon": "3.0.2",
    "jest": "29.7.0",
    "supertest": "6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
